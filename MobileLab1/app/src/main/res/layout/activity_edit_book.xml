<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sabina.mobilelab1.EditBookActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Title : "
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_marginLeft="13dp"
        android:layout_alignBottom="@+id/TitleEditText"
        android:layout_marginStart="13dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TitleEditText"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonSave"
        android:layout_alignStart="@+id/buttonSave" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author : "
        android:textSize="20dp"
        android:layout_marginTop="47dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/TitleEditText"
        android:layout_alignLeft="@+id/textView3" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AuthorEditText"
        tools:layout_editor_absoluteY="104dp"
        tools:layout_editor_absoluteX="137dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/TitleEditText"
        android:layout_alignStart="@+id/TitleEditText" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Save" />

</RelativeLayout>
